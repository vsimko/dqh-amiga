loaddat:
LOCATE 27,1:INPUT "Filename>",nam$
IF nam$="" THEN loaddat
OPEN"i",1,nam$

x=ASC(INPUT$(1,1))
y=ASC(INPUT$(1,1))
teraz=ASC(INPUT$(1,1))
cast=ASC(INPUT$(1,1))
FOR i=0 TO 5:duch(i)=ASC(INPUT$(1,1)):NEXT

FOR ii=0 TO 9
  OPEN"o",2,"ram:"+lnam$(ii)
  CLS
  num=FNl2
  PRINT #2,MKI$(num);
  FOR i=1 TO num
    wout=FNl1
    WINDOW OUTPUT wout
    PRINT #2,CHR$(wout);
    mx=FNl2
    my=FNl2
    lx=FNl1
    ly=FNl1
    PRINT #2,MKI$(mx);MKI$(my);CHR$(lx);CHR$(ly);
    GET(mx,my)-(mx+lx,my+ly),array
    WINDOW OUTPUT 2
    mx=FNl2
    my=FNl2
    PRINT #2,MKI$(mx);MKI$(my);
    PUT(mx,my),array
    NEXT
  CLOSE 2
NEXT

